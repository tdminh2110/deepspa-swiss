<%- include('includes/head.ejs') %>
<body>
    <%- include('includes/navigation.ejs') %>
    <main class="container">
        <div class="row">
            <div class="offset-3 col-6">
                <form action="/admin/add-clinician" method="POST">
                    <h1>Add a Clinician</h1>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="name" id="name">
                    </div>
                    <div class="form-group">
                        <label>Family name</label>
                        <input class="form-control" type="text" name="family_name" id="family_name">                
                    </div>
                    <div class="form-group">
                        <label for="birthday">Birthday</label>
                        <input class="form-control" type="text" name="birthday" id="birthday">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input class="form-control" type="text" name="phone" id="phone">                
                    </div>
                    <div class="form-group">
                        <label>Function</label>
                        <select class="form-control" id="function" name="function">
                            <% for (let func of funcs) { %>
                                <option value="<%= func.id %>"><%= func.name %></option> 
                            <% } %>           
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="establishment">Establishment</label>
                        <select class="form-control" id="establishment" name="establishment">
                            <% for (let esta of estas) { %>
                                <option value="<%= esta.id %>"><%= esta.name %></option> 
                            <% } %>           
                        </select>                
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" type="text" name="email" id="email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control" type="password" name="password" id="password">
                    </div>
                    <div class="form-group">
                        <label>Re-type password</label>
                        <input class="form-control" type="password" name="re_password" id="re_password">
                    </div>
                    <div class="form-group form-check manage-clinicians"> 
                        <input class="form-check-input" type="checkbox" name="manage_clinicians" id="manage_clinicians">
                        <label class="form-check-label" for="manage-clinicians">Manage Clinicians</label>                        
                    </div>
                    <button class="btn btn-primary btn-lg" type="submit">Add Clinician</button>                   
                </form>   
            </div>
        </div>
    </main>
</body>
<%- include('includes/end.ejs') %>