<%- include('includes/head.ejs') %>
<body>
    <%- include('includes/navigation.ejs') %>
    <main class="container">
        <div class="row">
            <div class="offset-3 col-6">
                <form action="/admin/edit-clinician" method="POST">
                    <h1>Edit the clinician</h1>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="name" id="name" value="<%= clinician.name %>">
                    </div>
                    <div class="form-group">
                        <label>Family name</label>
                        <input class="form-control" type="text" name="family_name" id="family_name" value="<%= clinician.family_name %>">                
                    </div>
                    <div class="form-group">
                        <label for="birthday">Birthday</label>
                        <input class="form-control" type="text" name="birthday" id="birthday" value="<%= clinician.birthday %>">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input class="form-control" type="text" name="phone" id="phone" value="<%= clinician.phone %>">                
                    </div>
                    <div class="form-group">
                        <label>Function</label>
                        <select class="form-control" id="function" name="function">
                            <% for (let func of funcs) { %>
                                <option value="<%= func.id %>" <%= func.id == clinician.id_function ? 'selected' : '' %>><%= func.name %></option> 
                            <% } %>           
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="establishment">Establishment</label>
                        <select class="form-control" id="establishment" name="establishment">
                            <% for (let esta of estas) { %>
                                <option value="<%= esta.id %>" <%= esta.id == clinician.id_establishment ? 'selected' : '' %>><%= esta.name %></option> 
                            <% } %>           
                        </select>                
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" type="text" name="email" id="email" value="<%= clinician.email %>" readonly>
                    </div>
                    <div class="form-group form-check manage-clinicians"> 
                        <input class="form-check-input" type="checkbox"  name="manage_clinicians" id="manage_clinicians" <%= clinician.manage_clinicians == 1 ? 'checked' : '' %>>
                        <label class="form-check-label" for="manage-clinicians">Manage Clinicians</label>                        
                    </div>
                    <button class="btn btn-primary btn-lg" type="submit">Edit Clinician</button>
                    <input type="hidden" id="id" name="id" value="<%= clinician.IDClinician %>">                 
                </form>   
            </div>
        </div>
    </main>
</body>
<%- include('includes/end.ejs') %>