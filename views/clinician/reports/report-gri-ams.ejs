<%- include('../includes/head.ejs') %>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-1">
                    <a href="/clinician/report-tests-effectues?idsession=<%= id_session %>"><img src="/images/icons/retour.png" alt="Edit" height="40" width="63"></a>
                </div>
                <div class="col-11">
                    <div class="row">
                        <div class="col-12">
                            <h5 class="font-weight-bold text-success">Patient: <%= patient_family_name %> <%= patient_name %></h5>
                        </div>                                                
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h5 class="font-weight-bold text-success">
                                Session <%= session_created_date.slice(0,2) %>/<%= session_created_date.slice(2,4) %>/<%= session_created_date.slice(4) %>
                            </h5>
                        </div>                                                
                    </div>
                    <div class="row">
                        <div class="col-12"><h5 class="font-weight-bold text-primary">Grille D’Amsler</h5><hr /></div>                                                                        
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-12"><h5>Problème œil Gauche: <%= po_g == 1 ? 'OUI' : 'NON' %></h5></div>                                    
                            </div>
                            <div class="row">
                                <div class="col-12"><h5>Problème œil droit: <%= po_d == 1 ? 'OUI' : 'NON' %></h5></div>                                    
                            </div>                            
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-12"><h5>Commentaires:</h5></div>                                    
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-bordered">
                                    <tr>
                                        <td><%= gri_ams_commentaires %></td>                                
                                    </tr>
                                    </table>
                                </div>
                            </div>                                                                 
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    </main>
</body>

<%- include('../includes/end.ejs') %>