<%- include('../includes/head.ejs') %>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-1">
                    <a href="/clinician/report-tests-effectues?idsession=<%= id_session %>"><img src="/images/icons/retour.png" alt="Edit" height="40" width="63"></a>
                </div>
                <div class="col-11">
                    <div class="row">
                        <div class="col-12">
                            <h5 class="font-weight-bold text-success">Patient: <%= patient_family_name %> <%= patient_name %></h5>
                        </div>                                                
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h5 class="font-weight-bold text-success">
                                Session <%= session_created_date.slice(0,2) %>/<%= session_created_date.slice(2,4) %>/<%= session_created_date.slice(4) %>
                            </h5>
                        </div>                                                
                    </div>
                    <div class="row">
                        <div class="col-12"><h5 class="font-weight-bold text-primary">Praxis Gestuelles</h5><hr /></div>                                                                        
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-12"><h5>Total = <%= total %></h5></div>                                    
                            </div>
                            <div class="row">
                                <div class="col-12"><h5>Praxies Gestuelles Symboliques = <%= praxies_gestuelles_symboliques %></h5></div>                                    
                            </div>
                            <div class="row">
                                <div class="col-12"><h5>Praxies Gestuelles Mimes d’Actions = <%= praxies_gestuelles_mimes_d_actions %></h5></div>                                    
                            </div>  
                            <div class="row">
                                <div class="col-12"><h5>Gestes Abstraits = <%= gestes_abstraits %></h5></div>                                    
                            </div>
                            <div class="row mt-3">
                                <div class="col-12"><h5>Commentaire:</h5></div>                                    
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-bordered">
                                    <tr>
                                        <td><%= commentaires %></td>                                
                                    </tr>
                                    </table>
                                </div>                                    
                            </div>                                                  
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-12">Vidéo:</div>                                    
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <% if (path_video != "") { %>
                                    <video width="500" controls>
                                        <source src="<%= path_video %>" type="video/webm">                                                
                                    </video>
                                    <% } %>
                                </div>
                            </div>                                                                           
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    </main>
</body>

<%- include('../includes/end.ejs') %>