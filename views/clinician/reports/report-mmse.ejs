<%- include('../includes/head.ejs') %>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-1">
                    <a href="/clinician/report-tests-effectues?idsession=<%= id_session %>"><img src="/images/icons/retour.png" alt="Edit" height="40" width="63"></a>
                </div>
                <div class="col-11">
                    <div class="row">
                        <div class="col-12">
                            <h5 class="font-weight-bold text-success">Patient: <%= patient_family_name %> <%= patient_name %></h5>
                        </div>                                                
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h5 class="font-weight-bold text-success">
                                Session <%= session_created_date.slice(0,2) %>/<%= session_created_date.slice(2,4) %>/<%= session_created_date.slice(4) %>
                            </h5>
                        </div>                                                
                    </div>
                    <div class="row">
                        <div class="col-12"><h5 class="font-weight-bold text-primary">Tests: MMSE</h5><hr /></div>                                                                        
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <table class="table table-borderless">      
                            <tr>
                                <td><h5 class="font-weight-bold">Total: <%= total %></h5></td>                                
                            </tr>
                            <tr>
                                <td><h5 class="font-weight-bold">Orientation temporelle: <%= orientation_temporelle %></h5></td>                                
                            </tr>
                            <tr>
                                <td><h5 class="font-weight-bold">Orientation spatiale: <%= orientation_spatiale %></h5></td>                                
                            </tr>
                            <tr>
                                <td><h5 class="font-weight-bold">Liste choisie: <%= list_number %></h5></td>                                
                            </tr>
                            <tr>
                                <td><h5 class="font-weight-bold">Apprentissage: <%= apprentissage %></h5></td>                                
                            </tr>
                            <tr>
                                <td><h5 class="font-weight-bold">Attention et calcul: <%= attention_et_calcul %></h5></td>                                
                            </tr>
                            <tr>
                                <td><h5 class="font-weight-bold">Rappel: <%= rappel %></h5></td>                                
                            </tr>
                            <tr>
                                <td><h5 class="font-weight-bold">Langage: <%= langage %></h5></td>                                
                            </tr>
                            <tr>
                                <td><h5 class="font-weight-bold">Praxies constructives: <%= praxies_constructives %></h5></td>                                
                            </tr>
                            </table>                            
                        </div>
                        <div class="col-6">
                            <table class="table table-borderless">      
                            <tr>
                                <td><h5 class="font-weight-bold">Commentaires:</h5></td>                                
                            </tr>
                            <tr>
                                <td>
                                    <table class="table table-bordered">
                                    <tr>
                                        <td><h6><%= commentaires %></h6></td>                                
                                    </tr>
                                    </table>
                                </td>                                
                            </tr>
                            <tr>
                                <td><h5 class="font-weight-bold">Video: <% if (path_video != "") { %> OUI <% } else { %> NON <% } %></h5></td>                                
                            </tr>
                            <tr>
                                <td class="text-center">
                                    <% if (path_video != "") { %>
                                    <video width="500" controls>
                                        <source src="<%= path_video %>" type="video/webm">                                                
                                    </video>
                                    <% } %>
                                </td>                                
                            </tr>                            
                            </table>                            
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    </main>
</body>

<%- include('../includes/end.ejs') %>