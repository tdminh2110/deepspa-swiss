<div class="card d-table" style="height:100%;width:100%">
    <div class="card-body d-table-cell align-middle text-center">
        <p><h3><b><%= text1 %></h3></b></p>
        <p>
            <div class="row mt-3">                
                <div class="col-6 text-right">
                    <h4><%= text2 %></h4>
                </div>
                <div class="col-6 text-left">
                    <h4><input type="text" id="<%= IDTextCountTimer %>" name="txtcount" style="width:50px;text-align:right" value="0" readonly="readonly" />&nbsp;<button type="button" id="<%= IDButtonControl1 %>" class="btn btn-secondary"><%= textButtonControl1 %></button>&nbsp;<button type="button" id="<%= IDButtonControl2 %>" class="btn btn-secondary"><%= textButtonControl2 %></button></h4>
                </div>                
            </div>
        </p> 
        <p>
            <div class="row mt-3">
                <div class="col-7 text-right">
                    <textarea class="form-control rounded-0" id="<%= IDTextArea %>" rows="10"></textarea>
                </div>
                <div class="col-5 text-right">
                    <div class="row mt-3">
                        <div class="col-12">
                                <h4><%= text3 %> <input type="text" id="<%= IDText1 %>" style="width:50px;text-align:right" value="0" readonly="readonly" />&nbsp;<button type="button" id="<%= IDButtonMinus1 %>" class="btn btn-secondary">-</button>&nbsp;<button type="button" id="<%= IDButtonPlus1 %>" class="btn btn-secondary">+</button></h4>
                        </div>                        
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                                <h4><%= text4 %> <input type="text" id="<%= IDText2 %>" style="width:50px;text-align:right" value="0" readonly="readonly" />&nbsp;<button type="button" id="<%= IDButtonMinus2 %>" class="btn btn-secondary">-</button>&nbsp;<button type="button" id="<%= IDButtonPlus2 %>" class="btn btn-secondary">+</button></h4>
                        </div>                        
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                                <h4><%= text5 %> <input type="text" id="<%= IDText3 %>" style="width:50px;text-align:right" value="0" readonly="readonly" />&nbsp;<button type="button" id="<%= IDButtonMinus3 %>" class="btn btn-secondary">-</button>&nbsp;<button type="button" id="<%= IDButtonPlus3 %>" class="btn btn-secondary">+</button></h4>
                        </div>                        
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                                <h4><%= text6 %> <input type="text" id="<%= IDText4 %>" style="width:50px;text-align:right" value="0" readonly="readonly" />&nbsp;<button type="button" id="<%= IDButtonMinus4 %>" class="btn btn-secondary">-</button>&nbsp;<button type="button" id="<%= IDButtonPlus4 %>" class="btn btn-secondary">+</button></h4>
                        </div>                        
                    </div>
                </div>
            </div>
        </p>      
    </div>    
</div>
<div class="text-right mt-3">
    <button id="<%= IDButton %>" class="btn btn-outline-primary" type="button"><%= txtButton %></button>
</div>