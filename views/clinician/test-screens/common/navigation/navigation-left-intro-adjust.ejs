            <% 
                if (languages.includes('fr')) {
            %>
                <option value='fr' <%= default_language == 'fr' ? 'selected' : '' %>>French</option>
            <%
                }

                if (languages.includes('de')) {
            %>

                <option value='de' <%= default_language == 'de' ? 'selected' : '' %>>German</option>
            <%
                }

                if (languages.includes('es')) {
            %>
                <option value='es' <%= default_language == 'es' ? 'selected' : '' %>>Espa√±a</option>
            <%
                }
            %>
            </select>
        </div>
    </div>
    </form>
</div>
