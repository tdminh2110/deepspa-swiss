        <div class="col-9"><h4 style="font-style:italic"><span style="font-weight:bold;color:slateblue"><%= session_name %></span> - <span style="font-weight:bold;color:red"><%= test_name %></span></h4></div>        
    </div>
</div>
<div class="card-body">
    <div class="form-group">
        <div class="form-check">
            <input id="<%= checkbox_id %>" type="checkbox" class="form-check-input" <%= record_checked %> style="-ms-transform:scale(2);-moz-transform:scale(2);-webkit-transform:scale(2);-o-transform:scale(2);padding:20px;" >
            <label class="form-check-label" style="font-weight:bold;font-style:italic">&nbsp;&nbsp;<%= record_name %></label>
        </div>
    </div>        
