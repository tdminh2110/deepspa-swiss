<div class="card d-table" style="height:100%;width:100%">
    <div class="card-body d-table-cell align-middle text-center">        
        <div class="row">                
            <div class="col-4">
                <p><h3><b><%= text1 %></b></h3></p>
                <p>
                    <h4><%= text2 %></h4>
                </p> 
            </div>
            <div class="col-8">                
                <input type="text" id="<%= IDTextCountTimer %>" name="txtcount" class="form-control-lg" style="width:70px;text-align:right" value="0" readonly="readonly" />&nbsp;<button type="button" id="<%= IDButtonControl1 %>" class="btn btn-secondary btn-lg">Commencer</button>&nbsp;<button type="button" id="<%= IDButtonControl2 %>" class="btn btn-secondary btn-lg" style="display:none">RÃ©initialiser</button>
            </div>                
        </div>      
        <p>
            <table class="table"> 
            <% for (let i = 0; i < listColors.length; i++) { %>
                <% if (i % 4 == 0) { %>                               
                    <tr>
                        <td>
                            <button type="button" id="<%= listColors[i].id0 %>" class="btn btn-outline-secondary btn-lg"><%= listColors[i].name %></button><button type="button" id="<%= listColors[i].id1 %>" class="btn btn-outline-secondary btn-lg"><%= text3 %></button>
                        </td>
                <% } else if (i % 4 == 3) { %>            
                        <td>
                            <button type="button" id="<%= listColors[i].id0 %>" class="btn btn-outline-secondary btn-lg"><%= listColors[i].name %></button><button type="button" id="<%= listColors[i].id1 %>" class="btn btn-outline-secondary btn-lg"><%= text3 %></button>
                        </td>                    
                    </tr>
                
                <% } else { %>            
                    <td>
                        <button type="button" id="<%= listColors[i].id0 %>" class="btn btn-outline-secondary btn-lg"><%= listColors[i].name %></button><button type="button" id="<%= listColors[i].id1 %>" class="btn btn-outline-secondary btn-lg"><%= text3 %></button>
                    </td>
                <% } %>
            <% } %>
            </table>
        </p>
    </div>    
</div>
<div class="row mt-3">
    <div class="col-6 text-left">
        <button id="<%= IDButtonLeft %>" class="btn btn-outline-primary" type="button"><%= txtButtonLeft %></button>
    </div>
    <div class="col-6 text-right">
        <button id="<%= IDButtonRight %>" class="btn btn-outline-primary" type="button"><%= txtButtonRight %></button>
    </div>
</div>