<div class="card d-table" style="height:100%;width:100%">
    <div class="card-body d-table-cell align-middle text-center">        
        <p><h3><b><%= text %></b></h3></p>
        <p>
            <div class="row mt-3">
                <div class="col-12">
                    <textarea class="form-control rounded-0" id="<%= IDTextArea %>" rows="15"></textarea>
                </div>
            </div>
        </p>
    </div>    
</div>
<div class="row mt-3">
    <div class="col-6 text-left">
        <button id="<%= IDButtonLeft %>" class="btn btn-danger" type="button"><%= txtButtonLeft %></button>
    </div>
    <div class="col-6 text-right">
        <button id="<%= IDButtonRight %>" class="btn btn-outline-primary" type="button"><%= txtButtonRight %></button>
    </div>
</div>