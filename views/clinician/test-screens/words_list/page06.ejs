<div class="card d-table" style="height:100%;width:100%">
    <div class="card-body d-table-cell align-middle text-center">
        <p>
            <div class="row">
                <div class="col-12 text-center">
                    <p class="h1"><b><%= text %></b></p>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-4"></div>
                <div class="col-4">
                    <button type="button" id="<%= IDButton %>" class="btn btn-secondary btn-lg btn-block"><%= txtButton %></button>
                </div>
                <div class="col-4"></div>
            </div>                     
        </p>
    </div>    
</div>
<div class="row mt-3">
    <div class="col-6 text-left">
        <button id="<%= IDButtonLeft %>" class="btn btn-outline-primary" type="button"><%= txtButtonLeft %></button>
    </div>
    <div class="col-6 text-right">
        <button id="<%= IDButtonRight %>" class="btn btn-outline-primary" type="button"><%= txtButtonRight %></button>
    </div>
</div>
        