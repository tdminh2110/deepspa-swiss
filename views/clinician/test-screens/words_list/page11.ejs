        <p>
            <div class="row">
                <div class="col-12 text-center">
                    <p class="h1"><b><%= text %></b></p>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-2"></div>
                <div class="col-4">
                    <button type="button" id="<%= IDButton1 %>" class="btn btn-secondary btn-lg btn-block">
                        <span><%= txtButton1_1 %></span><br/>
