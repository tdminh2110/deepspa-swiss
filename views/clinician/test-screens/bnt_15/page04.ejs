<div class="card d-table" style="height:100%;width:100%">
    <div class="card-body d-table-cell align-middle text-center">
        <p>
            <div class="row">                
                <div class="col-6">
                    <p>
                        <img src="<%= urlImage %>" class="img-fluid" style="width:80%" />
                    </p>
                </div>
                <div class="col-6">
                    <p>
                        <h3><b><%= text1 %></b></h3>
                    </p>
                    <p>
                        <div class="row">
                            <div class="col-3"></div>
                            <div class="col-3">
                                <button type='button' id='<%= IDButton1 %>' class='btn btn-secondary btn-lg btn-block'><%= txtButton1 %></button>
                            </div>
                            <div class="col-3">
                                <button type='button' id='<%= IDButton2 %>' class='btn btn-secondary btn-lg btn-block'><%= txtButton2 %></button>
                            </div>
                            <div class="col-3"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <h4><input type="text" id="<%= IDTextCountTimer %>" name="txtcount" style="width:100px;text-align:center" value="0" readonly="readonly" /></h4>
                            </div>
                        </div>
                    </p>
                </div>
            </div>
        </p>
        <p>
            <h4 class="text-left"><b><%= text2 %></b></h4>
            <input class="form-control-lg" type="text" id="<%= IDText %>" name="<%= IDText %>" style="width:100%" value="" />
        </p>
    </div>    
</div>
<div class="row mt-3">
    <div class="col-6 text-left">
        <button id="<%= IDButtonLeft %>" class="btn btn-outline-primary" type="button"><%= txtButtonLeft %></button>
    </div>
    <div class="col-6 text-right">
        <button id="<%= IDButtonRight %>" class="btn btn-outline-primary" type="button" style="display:none"><%= txtButtonRight %></button>
    </div>
</div>