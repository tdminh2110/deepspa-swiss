<div class="card d-table" style="height:100%;width:100%">
    <div class="card-body d-table-cell align-middle text-center">
        <p><h3><b><%= text1 %></h3></b></p>
        <p><h4 class="text-left"><b><%= text2 %></b></h4></p>
        <p>
            <div class="row">
                <div class="col-9">
                    <h2><span id="<%= IDButtonAudio1 %>" onclick="playAudio1()" style="cursor:pointer"><i class="fas fa-sm fa-play"></i></span>&nbsp;&nbsp;&nbsp;<b><%= text3 %></b></h2>
                </div>                
                <div class="col-1">                    
                    <button type="button" id="<%= IDButton1 %>" class="btn btn-secondary"><%= txtButton1 %></button>                    
                </div>
                <div class="col-1">                    
                    <button type="button" id="<%= IDButton2 %>" class="btn btn-secondary"><%= txtButton2 %></button>
                </div>
                <div class="col-1">&nbsp;</div>
            </div>
        </p>
        <p><h4 class="text-left"><b><%= text4 %></b></h4></p>
        <p>
            <div class="row">
                <div class="col-9">                    
                    <h2><span id="<%= IDButtonAudio2 %>" onclick="playAudio2()" style="cursor:pointer"><i class="fas fa-sm fa-play"></i></span>&nbsp;&nbsp;&nbsp;<b><%= text5 %></b></h2>
                </div>                
                <div class="col-1">                    
                    <button type="button" id="<%= IDButton3 %>" class="btn btn-secondary"><%= txtButton3 %></button>                    
                </div>
                <div class="col-1">                    
                    <button type="button" id="<%= IDButton4 %>" class="btn btn-secondary"><%= txtButton4 %></button>
                </div>
                <div class="col-1">&nbsp;</div>
            </div>
        </p>
        
    </div>    
</div>
<div class="row mt-3">
    <div class="col-6 text-left">
        <button id="<%= IDButtonLeft %>" class="btn btn-outline-primary" type="button"><%= txtButtonLeft %></button>
    </div>
    <div class="col-6 text-right">
        <button id="<%= IDButtonRight %>" class="btn btn-outline-primary" type="button" style="display:none"><%= txtButtonRight %></button>
    </div>
</div>

<audio id="<%= IDAudio1 %>">
    <source src="<%= pathAudio1 %>" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>

<audio id="<%= IDAudio2 %>">
    <source src="<%= pathAudio2 %>" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>

<script>    
    function playAudio1() { 
        let audio1 = document.getElementById("<%= IDAudio1 %>"); 
        audio1.play(); 
    }
    
    function playAudio2() {
        let audio2 = document.getElementById("<%= IDAudio2 %>");
        audio2.play(); 
    }
</script>